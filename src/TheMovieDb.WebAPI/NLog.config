<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>

		<variable name="line" value="-----------------------------------"/>

		<!-- File Target for all log messages with basic details -->
		<target xsi:type="File" name="errorFile" fileName="logs/error-file-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}|${line}" />

		<!-- File Target for own log messages with extra web details using some ASP.NET core renderers -->
		<target xsi:type="File" name="ownFile-web" fileName="logs/own-file-web-logs-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${scopetiming}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}\n" />

		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>

		<logger name="*" minlevel="Error" writeTo="errorFile" final="true" />
		<logger name="*" minlevel="Info" writeTo="ownFile-web, lifetimeConsole" />

		<!--All logs, including from Microsoft-->
		<!--
		<logger name="*" minlevel="Trace" writeTo="allfile" />

		-->
		<!--Output hosting lifetime messages to console target for faster startup detection -->
		<!--
		<logger name="Microsoft.Hosting.Lifetime" minlevel="Error" writeTo="lifetimeConsole, ownFile-web" final="true" />

		-->
		<!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
		<!--
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="System.Net.Http.*" maxlevel="Info" final="true" />

		<logger name="*" minlevel="Trace" writeTo="ownFile-web" />-->
	</rules>
</nlog>
